{
  "name": "linkshield",
  "version": "6.8.0",
  "description": "LinkShield Chrome Extension - Phishing and malware protection",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "sharp": "^0.34.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "content.js",
      "config.js",
      "background.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
